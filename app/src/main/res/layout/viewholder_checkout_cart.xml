<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/prd"
        android:layout_marginTop="10dp"
        android:background="@drawable/rec_while_bg"
        android:layout_width="match_parent"
        android:layout_height="183dp">

        <ImageView
            android:id="@+id/prd_cart"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/coca_product"
            android:background="@drawable/product_bg"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txt_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coca Cola"
            android:textSize="14dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:layout_marginStart="140dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/Green"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/price_prd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:layout_marginStart="150dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/Green"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$50 50% off "
            android:layout_marginStart="190dp"
            android:layout_marginTop="63dp"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/remove_prd"
            android:layout_width="match_parent"
            android:layout_marginTop="150dp"
            android:layout_height="40dp"
            android:text="Remove"
            android:padding="7dp"
            android:background="@drawable/remove_bg"
            android:textAlignment="center"/>
    </FrameLayout>
</LinearLayout>