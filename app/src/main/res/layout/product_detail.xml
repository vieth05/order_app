<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Activity.MainActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_prd"
                    android:layout_width="410dp"
                    android:layout_height="230dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/coca_product" />

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/circle_bg"
                    android:padding="10dp"
                    app:srcCompat="@drawable/back_" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="230dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/circle_bg"
                    android:padding="10dp"
                    app:srcCompat="@android:drawable/ic_menu_share" />

                <ImageView
                    android:id="@+id/like"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="285dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/circle_bg"
                    android:padding="10dp"
                    app:srcCompat="@drawable/love_share" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="340dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/circle_bg"
                    android:padding="10dp"
                    app:srcCompat="@drawable/more" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@drawable/rec_while_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_prd"
                    android:text="hello"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:textSize="28dp"
                    android:textStyle="bold"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:text="$"
                        android:textColor="@color/Green"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="15"
                        android:textColor="@color/Green"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:lineHeight="17dp"
                        android:text="$50 50% off "
                        android:textColor="@color/Black"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rec_while_bg"
                android:orientation="horizontal"

                >

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="17dp"
                    app:srcCompat="@drawable/logo_tradly" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="21dp"
                    android:text="Tradly Store"

                    android:textSize="19dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button2"
                    android:layout_width="96dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="21dp"
                    android:background="@drawable/login_bg"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:textColor="@color/White" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="353dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rec_while_bg"
                android:padding="20dp"
                android:text="@string/lorem"
                android:textSize="18dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rec_while_bg">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Details"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="93dp"
                    android:layout_height="131dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="80dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Condition"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Price Type"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Category"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Location"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="131dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="80dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView261"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organic"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/textView271"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Fixed"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/textView281"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Beverages"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/textView291"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Kualalumpur, Malaysia"
                        android:textSize="17dp" />
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rec_while_bg">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Additional Details"
                    android:textSize="21dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="60dp"
                    android:text="Delivery Details"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="60dp"
                    android:text="Home Delivery Available,\nCash On Delivery"
                    android:textSize="17dp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_gravity="center"

            android:textAllCaps="false"
            android:background="@drawable/login_bg"
            android:id="@+id/add_btn"
            android:layout_width="311dp"
            android:layout_height="48dp"
            android:text="Add To Cart"
            android:textSize="18dp"
            android:textColor="@color/White"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
