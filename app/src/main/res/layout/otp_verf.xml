<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/Green"
    >
    <ImageView
        android:id="@+id/back2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/back_"
        android:contentDescription="Back"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"/> <!-- Thêm padding ở đây để tăng diện tích nhấn -->


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Verification"
        android:textColor="@color/White"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_marginTop="190dp"

        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Enter your OTP code here"
        android:textColor="@color/White"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <EditText
            android:id="@+id/edtov1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:padding="16dp"

            />

        <EditText
            android:id="@+id/edtov2"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:padding="16dp" />

        <EditText
            android:id="@+id/edtov3"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="16dp" />

        <EditText
            android:id="@+id/edtov4"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:padding="16dp" />

        <EditText
            android:id="@+id/edtov5"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:padding="16dp" />

        <EditText
            android:id="@+id/edtov6"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:padding="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginTop="40dp"
        android:text="Didn’t you received any code? "
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="18dp"

        />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginTop="15dp"
        android:text="Resent new code"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="18dp"

        />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/next_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textColor="@color/Green"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/btn_login"
        android:layout_marginTop="45dp"

        style="@style/Widget.Design.TabLayout"
        android:textSize="18sp"
        />

</LinearLayout>